<resources>

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">

		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
		<item name="textAppearanceFinish">@style/TextAppearanceFinish</item>
	</style>

	<style name="styleButtonBar" parent="@android:style/ButtonBar">
		<item name="android:textAppearance">?android:attr/textAppearanceButton</item>
		<item name="android:textColor">@android:color/primary_text_dark</item>
	</style>

	<style name="ButtonBar" parent="@android:style/Holo.Light.ButtonBar.AlertDialog"></style>

	<style name="ButtonBarButton" parent="@android:style/Widget.Holo.Button.Borderless">
		<item name="android:textColor">@android:color/primary_text_light</item>
	</style>

	<style name="TextAppearanceFinish" parent="@android:style/TextAppearance.Small">
		<item name="android:textColor">#fff</item>
	</style>

	<style name="styleMmProductColumnText" parent="android:Widget.Holo.Light.TextView">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:padding">5dp</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:textColor">@android:color/primary_text_dark</item>
		<item name="android:textStyle">bold</item>
		<item name="android:width">60dp</item>
	</style>

</resources>