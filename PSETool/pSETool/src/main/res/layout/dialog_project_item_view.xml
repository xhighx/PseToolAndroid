<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@android:drawable/picture_frame">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
                android:id="@+id/dialog_installsheet_descriptiontv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
            android:textSize="14sp"
            android:padding="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0">

            <TextView
                    android:id="@+id/dialog_installsheet_skutv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999999"
                android:textIsSelectable="false"
                android:textSize="14sp"
                android:layout_weight="0"
                android:padding="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp" />

            <TextView
                android:id="@+id/dialog_installsheet_modeltv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999999"
                android:textSize="14sp"
                android:padding="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/dialog_installsheet_costtv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        android:layout_weight="0"
            android:gravity="center_vertical"
            android:text="$1000.00"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="14sp"
        android:padding="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp" />

    <TextView
            android:id="@+id/dialog_installsheet_retailtv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        android:layout_weight="0"
            android:gravity="center_vertical"
            android:text="$2000.00"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="14sp"
        android:padding="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp" />

</LinearLayout>